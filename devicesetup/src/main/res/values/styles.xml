<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FinePrint">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textColorLink">@color/link_text_color</item>
    </style>

    <style name="check_box_style" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAppWhite</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="edit_text_style">
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/color_edittext_hint</item>
       <!-- <item name="android:textSize">@dimen/default_textsize_medium</item>-->
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_login</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="button_style">
       <!-- <item name="android:textSize">@dimen/default_textsize_btn</item>-->
        <item name="android:background">@drawable/rounded_rectangle_for_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>