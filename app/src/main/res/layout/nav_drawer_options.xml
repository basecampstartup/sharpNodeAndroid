                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_padding_5dp"
                    android:layout_marginTop="@dimen/dim_padding_5dp"
