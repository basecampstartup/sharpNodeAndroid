                android:background="@color/md_grey_200"></View>-->

            <LinearLayout
                android:id="@+id/llSettingsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_padding_15dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings"></ImageView>

                <TextView
                    android:id="@+id/tvSettings"
                    style="@style/text_view_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_padding_5dp"
                    android:padding="@dimen/dim_padding_10dp"
                    android:text="@string/LeftPanelAccountSettings"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUserManualPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_padding_15dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_username"></ImageView>

                <TextView
                    android:id="@+id/tvUserManual"
                    style="@style/text_view_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_padding_5dp"
                    android:padding="@dimen/dim_padding_10dp"
                    android:text="@string/LeftPanelUserManuals"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llContactUsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_padding_15dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_contactus"></ImageView>

                <TextView
                    android:id="@+id/tvContactUs"
                    style="@style/text_view_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_padding_5dp"
                    android:padding="@dimen/dim_padding_10dp"
                    android:text="@string/LeftPanelContactUs"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogoutPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_padding_15dp"
                android:layout_marginTop="@dimen/dim_padding_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_logout"
                    ></ImageView>

                <TextView
                    android:id="@+id/tvLogout"
                    style="@style/text_view_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_padding_5dp"
                    android:padding="@dimen/dim_padding_10dp"
                    android:text="@string/LeftPanelLogout"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
