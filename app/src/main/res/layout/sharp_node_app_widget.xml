<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_padding_10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvWidgetLbl1"
            style="@style/text_view_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"></TextView>

        <TextView
            android:id="@+id/tvWidgetLbl2"
            style="@style/text_view_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_padding_2dp"
            android:text="Control appliances of your Room-1"
            android:textColor="@color/colorAppWhite"
            android:visibility="gone"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:orientation="horizontal"
        android:padding="0.5dp">

        <Button
            android:id="@+id/btnCFLSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/ApplianceCfl"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

        <Button
            android:id="@+id/btnFanSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/ApplianceFan"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

        <Button
            android:id="@+id/btnLampSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/ApplianceAC"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

        <Button
            android:id="@+id/btnTVSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/ApplianceWP"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

        <Button
            android:id="@+id/btnMusicSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/AppliancePrint"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

        <Button
            android:id="@+id/btnSixSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_black_semi_trans"
            android:elevation="2dp"
            android:singleLine="true"
            android:text="@string/AppliancePrint"
            android:textAllCaps="false"
            android:textColor="@color/colorAppWhite"
            android:textSize="@dimen/default_textsize_medium" />

    </LinearLayout>

</LinearLayout>