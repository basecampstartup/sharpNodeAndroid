            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_padding_10dp"
            android:layout_toRightOf="@+id/ivCFL"
            android:padding="@dimen/dim_padding_10dp"
            android:text="@string/ApplianceCfl"
            android:textColor="@color/colorAppBlack"
            android:textSize="@dimen/dim_font_size_16"></TextView>

        <ImageView
            android:id="@+id/ivCFLSwitchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible"></ImageView>
    </RelativeLayout>

